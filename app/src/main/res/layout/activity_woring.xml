<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoringActivity"
    android:background="#79956D"
    android:padding="30dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阈值设置"
        android:textSize="30sp"
        android:textColor="#131213"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/temp"
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@drawable/textview2"
                android:text="空气温度:  30℃"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/soilTemp"
                android:layout_marginLeft="20dp"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@drawable/textview"
                android:text="土壤温度:  20℃"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/co2"
                android:layout_marginLeft="20dp"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@drawable/textview2"
                android:text="CO2:  620ppm"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/temp_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview2"
                android:text="+"
                android:textSize="20sp" />
            <Button
                android:id="@+id/temp_sub"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="—"
                android:textSize="20sp" />
            <Button
                android:id="@+id/soilTemp_add"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview2"
                android:text="+"
                android:textSize="20sp" />
            <Button
                android:id="@+id/soilTemp_sub"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="—"
                android:textSize="20sp" />
            <Button
                android:id="@+id/co2_add"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview2"
                android:text="+"
                android:textSize="20sp" />
            <Button
                android:id="@+id/co2_sub"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="—"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@id/humidity"
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@drawable/textview"
                android:text="空气湿度:  40%"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/soilHumidity"
                android:layout_marginLeft="20dp"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@drawable/textview2"
                android:text="土壤湿度:  60%"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/light"
                android:layout_marginLeft="20dp"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@drawable/textview"
                android:text="光照强度:  108lux"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/humidity_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview2"
                android:text="+"
                android:textSize="20sp" />
            <Button
                android:id="@+id/humidity_sub"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="—"
                android:textSize="20sp" />
            <Button
                android:id="@+id/soilHumidity_add"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview2"
                android:text="+"
                android:textSize="20sp" />
            <Button
                android:id="@+id/soilHumidity_sub"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="—"
                android:textSize="20sp" />
            <Button
                android:id="@+id/light_add"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview2"
                android:text="+"
                android:textSize="20sp" />
            <Button
                android:id="@+id/light_sub"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:text="—"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>