<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#79956D"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模式设置"
        android:textSize="30sp"
        android:textColor="#131213"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/textview">
    </Spinner>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/temp"
                android:layout_marginLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/textview2"
                android:text="空气温度:  30℃"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/soilTemp"
                android:layout_marginLeft="20dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/textview"
                android:text="土壤温度:  20℃"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/co2"
                android:layout_marginLeft="20dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/textview2"
                android:text="CO2:  620ppm"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/humidity"
                android:layout_marginLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/textview"
                android:text="空气湿度:  40%"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/soilHumidity"
                android:layout_marginLeft="20dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/textview2"
                android:text="土壤湿度:  60%"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>

            <TextView
                android:id="@+id/light"
                android:layout_marginLeft="20dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/textview"
                android:text="光照强度:  108lux"
                android:textSize="20sp"
                android:textColor="#131213"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>